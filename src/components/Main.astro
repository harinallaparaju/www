---
import Link from './icons/Link.astro'

const projects = [
  {
    label: 'Project One',
    href: 'example.com',
    description:
      'Coming Soon',
  },
  {
    label: 'Project Two',
    href: 'example.com',
    description: 'Coming Soon.',
  },
  {
    label: 'Project Three',
    href: 'example.com',
    description: 'Coming Soon.',
  },
]

const socials = [
  {
    label: 'hari.nallaparaju@gmail.com',
    href: 'mailto:hari.nallaparaju@gmail.com',
  },
  // {
  //   label: 'X',
  //   href: 'https://x.com/harinallaparaju',
  // },
  {
    label: 'GitHub',
    href: 'https://github.com/harinallaparaju',
  },
  {
    label: 'LinkedIn',
    href: 'https://www.linkedin.com/in/surya-narayana-raju-nallaparaju-99b4b2217/',
  },
