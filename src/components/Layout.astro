---
import '../global.css';
import Header from './Header.astro';
import Footer from './Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      {Astro.props.title ? `${Astro.props.title} | Surya Nallaparaju` : 'Surya Nallaparaju'}
    </title>
    <meta name="description" content="The website and design portfolio of Surya Nallaparaju." />
  </head>

  <body class="bg-neutral-50 text-neutral-900 antialiased">
    <!-- ✅ Shared centered header for all pages -->
    <div class="flex justify-center">
      <div class="w-[90vw] max-w-4xl">
        <Header />
      </div>
    </div>

    <!-- ✅ Main content area -->
    <main class="flex justify-center">
      <div class="mt-8 flex min-h-screen w-[90vw] flex-col xs:w-[500px] max-w-4xl">
        <slot />
        <Footer />
      </div>
    </main>

    <!-- ✅ Subtle blur edges for Apple feel -->
    <div
      class="fixed top-0 z-0 h-12 w-screen bg-neutral-100/70 blur"
      aria-hidden="true"
    ></div>
    <div
      class="fixed bottom-0 z-0 h-12 w-screen bg-neutral-100/70 blur"
      aria-hidden="true"
    ></div>
  </body>
</html>
