---
import Link from './icons/Link.astro';

const isHome = Astro.url.pathname === '/';
---

<header
  class:list={[
    'animate-intro transition-all duration-300',
    isHome ? 'mt-8' : 'mt-8', // Adds top breathing room below cloud
  ]}
>
  <div class="flex flex-col justify-center w-[90vw] xs:w-[500px] max-w-4xl mx-auto">
    {(
      // Minimal header for blog/gallery pages
      <nav class="mt-4 mb-2 flex justify-center">
        <div class="flex flex-wrap gap-x-6 gap-y-2">
          <a
            href="/"
            class="group flex items-center gap-1 font-medium text-neutral-700 transition-all hover:text-neutral-900 hover:translate-x-1"
          >
            <span>Home</span>
            <div class="opacity-0 group-hover:opacity-100 transition-opacity">
              <Link />
            </div>
          </a>
          <a
            href="/blog/"
            class="group flex items-center gap-1 font-medium text-neutral-700 transition-all hover:text-yellow-600 hover:translate-x-1"
          >
            <span>Blog</span>
            <div class="opacity-0 group-hover:opacity-100 transition-opacity">
              <Link />
            </div>
          </a>
          <a
            href="/gallery/"
            class="group flex items-center gap-1 font-medium text-neutral-700 transition-all hover:text-blue-600 hover:translate-x-1"
          >
            <span>Gallery</span>
            <div class="opacity-0 group-hover:opacity-100 transition-opacity">
              <Link />
            </div>
          </a>
          
        </div>
      </nav>
    )}
  </div>
</header>
